---
import BaseHead from "../components/BaseHead.astro";
import NavBar from "../components/NavBar.astro";

const { frontmatter } = Astro.props;
---

<html lang="en">
	<BaseHead title={frontmatter.title}/>

	<body class="bg-gray-900">
		<NavBar/>
		<div class="bg-gradient-to-r from-pink-500 to-purple-900 h-4"/>

		<div class="bg-gradient-to-b from-slate-100 to-white border-top border-t-8">
			<div class="mx-auto max-w-2xl text-left">
				<h1 class="font-extrabold text-2xl">{ frontmatter.title }</h1>
				<h2 class="font-semibold text-sm">{ frontmatter.description }</h2>
				<h3 class="mt-2 font-normal text-xs">Published: { frontmatter.pubDate }</h3>
				<h3 class="mt-1 font-normal text-xs">Tags: { frontmatter.tags }</h3>
				<article class="my-4 pb-4 prose prose-stone prose-md prose-h1:text-2xl">
					<slot/>
				</article>
			</div>
		</div>
	</body>

</html>
